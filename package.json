    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "redis": "^4.6.10",
    "uuid": "^13.0.0",
    "ws": "^8.14.2",
    "zod": "^4.1.12"
