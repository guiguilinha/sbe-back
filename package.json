{
  "name": "maturidade-digital-backend",
  "version": "1.0.0",
  "description": "Backend API para o Sistema de Maturidade Digital - Sebrae MG",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run clean && tsc && tsc-alias && echo \"âœ… Build finalizado com sucesso\"",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t maturidade-digital-backend .",
    "docker:run": "docker run -p 8080:8080 maturidade-digital-backend",
    "k8s:apply": "./scripts/prod.sh",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:status": "kubectl get pods -n maturidade-digital"
  },
  "keywords": [
    "sebrae",
    "maturidade-digital",
    "backend",
    "api",
    "nodejs",
    "typescript",
    "express"
